{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "kotlinc-native -o build/main -Wextra -Werror -g -linker-options \"--allow-shlib-undefined\" -library thirdparty/bindings/sdl3/sdl3.klib src/main.kt",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "kotlinc-native -o build/main -Wextra -Werror -opt -linker-options \"--allow-shlib-undefined\" -library thirdparty/bindings/sdl3/sdl3.klib src/main.kt",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "binding-sdl3",
            "type": "shell",
            "command": "cinterop -def ./thirdparty/definitions/sdl.def -o ./thirdparty/bindings/sdl3/sdl3",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "binding-gl",
            "type": "shell",
            "command": "cinterop -def ./thirdparty/definitions/gl.def -o ./thirdparty/bindings/gl/gl",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "bindings-all",
            "dependsOn": ["binding-sdl3", "binding-gl"],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
