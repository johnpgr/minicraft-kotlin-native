{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "kotlinc-native -Wextra -Werror -g -o build/main src/main.kt ",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "kotlinc-native -Wextra -Werror -opt  -o build/main src/main.kt",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
